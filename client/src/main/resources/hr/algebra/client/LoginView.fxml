<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hr.algebra.client.controller.LoginController"
            prefWidth="420.0" prefHeight="260.0">
    <children>
        <VBox spacing="12.0" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="30.0"
              AnchorPane.rightAnchor="30.0" AnchorPane.bottomAnchor="30.0">
            <children>
                <Label text="Prijava" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <TextField fx:id="usernameField" promptText="KorisniÄko ime" />
                <PasswordField fx:id="passwordField" promptText="Lozinka" />

                <HBox spacing="10">
                    <children>
                        <Button fx:id="loginButton" text="Prijavi se" defaultButton="true"
                                onAction="#onLogin" prefWidth="120"/>
                        <ProgressIndicator fx:id="progress" visible="false" prefWidth="24" prefHeight="24"/>
                    </children>
                </HBox>

                <Label fx:id="statusLabel" textFill="#cc0000" wrapText="true"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
